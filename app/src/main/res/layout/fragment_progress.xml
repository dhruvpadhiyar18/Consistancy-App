<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="28dp">

            <TextView
                android:id="@+id/tvProgressTitle"
                style="@style/TextAppearance.Pro.HeadlineLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Journey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                app:icon="@drawable/ic_launch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvProgressTitle"
                app:layout_constraintBottom_toBottomOf="@id/tvProgressTitle" />

            <!-- Overall Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOverall"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@id/tvProgressTitle">

                <LinearLayout
                    android:id="@+id/shareCardContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/primary"
                        android:textSize="56sp"
                        android:fontFamily="sans-serif-black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OVERALL PROGRESS"
                        android:textColor="@color/text_muted"
                        android:textSize="12sp"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-black" />

                    <ProgressBar
                        android:id="@+id/progressBarProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="32dp"
                        android:max="180"
                        android:progressDrawable="@drawable/custom_progress_bar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDayProgress"
                            style="@style/TextAppearance.Pro.TitleMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Day 1 / 180" />

                        <TextView
                            android:id="@+id/tvStreakProgress"
                            style="@style/TextAppearance.Pro.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”¥ 0 Days"
                            android:textColor="@color/primary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- NEW: FEATURE 3 - Progress Analytics -->
            <TextView
                android:id="@+id/tvStatsLabel"
                style="@style/TextAppearance.Pro.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Learning Analytics"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardOverall" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStats"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvStatsLabel">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:columnCount="3"
                    android:padding="20dp">

                    <!-- Accuracy -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvQuizAccuracy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accuracy"
                            android:textSize="11sp"
                            android:textColor="@color/text_muted" />
                    </LinearLayout>

                    <!-- Quizzes Done -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvQuizzesDone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quizzes"
                            android:textSize="11sp"
                            android:textColor="@color/text_muted" />
                    </LinearLayout>

                    <!-- Weekend Score -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvWeekendScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weekend Pts"
                            android:textSize="11sp"
                            android:textColor="@color/text_muted" />
                    </LinearLayout>

                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Roadmap Visualization -->
            <TextView
                android:id="@+id/tvRoadmapLabel"
                style="@style/TextAppearance.Pro.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Roadmap to AI Mastery"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardStats" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRoadmap"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvRoadmapLabel">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHASE 1: FOUNDATION (DAYS 1-30)"
                        android:textColor="@color/primary"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Python basics, logic, and data handling."
                        android:textColor="@color/text_body"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider" android:layout_marginVertical="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHASE 2: MACHINE LEARNING (DAYS 31-90)"
                        android:textColor="@color/primary"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Data analysis, regression, and core ML models."
                        android:textColor="@color/text_body"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider" android:layout_marginVertical="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHASE 3: DEEP LEARNING (DAYS 91-150)"
                        android:textColor="@color/primary"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Neural networks, NLP, and Computer Vision."
                        android:textColor="@color/text_body"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider" android:layout_marginVertical="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHASE 4: CAREER READY (DAYS 151-180)"
                        android:textColor="@color/primary"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Major projects, MLOps, and interview prep."
                        android:textColor="@color/text_body"
                        android:textSize="14sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Trophies Section -->
            <TextView
                android:id="@+id/tvTrophiesLabel"
                style="@style/TextAppearance.Pro.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Major Milestones"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardRoadmap" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toBottomOf="@id/tvTrophiesLabel"
                app:layout_constraintBottom_toBottomOf="parent">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:columnCount="4"
                    android:padding="20dp"
                    android:useDefaultMargins="true">
                    
                    <ImageView
                        android:id="@+id/trophy1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_trophy" />
                    <ImageView
                        android:id="@+id/trophy2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_trophy" />
                    <ImageView
                        android:id="@+id/trophy3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_trophy" />
                    <ImageView
                        android:id="@+id/trophy4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_trophy" />
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
