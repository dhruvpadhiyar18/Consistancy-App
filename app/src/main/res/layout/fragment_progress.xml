<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="28dp">

            <TextView
                android:id="@+id/tvProgressTitle"
                style="@style/TextAppearance.Pro.HeadlineLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Journey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- NEW: Share Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Progress"
                app:icon="@drawable/ic_launch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvProgressTitle"
                app:layout_constraintBottom_toBottomOf="@id/tvProgressTitle" />

            <!-- Overall Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOverall"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvProgressTitle">

                <LinearLayout
                    android:id="@+id/shareCardContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/primary"
                        android:textSize="56sp"
                        android:fontFamily="sans-serif-black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OVERALL PROGRESS"
                        android:textColor="@color/text_muted"
                        android:textSize="12sp"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-black" />

                    <ProgressBar
                        android:id="@+id/progressBarProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="32dp"
                        android:max="180"
                        android:progressDrawable="@drawable/custom_progress_bar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDayProgress"
                            style="@style/TextAppearance.Pro.TitleMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Day 1 / 180" />

                        <TextView
                            android:id="@+id/tvStreakProgress"
                            style="@style/TextAppearance.Pro.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”¥ 0 Days"
                            android:textColor="@color/primary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- NEW: Trophies Section -->
            <TextView
                android:id="@+id/tvTrophiesLabel"
                style="@style/TextAppearance.Pro.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Unlocked Trophies"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardOverall" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvTrophiesLabel">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:columnCount="4"
                    android:padding="16dp"
                    android:useDefaultMargins="true">
                    
                    <ImageView
                        android:id="@+id/trophy1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_trophy"
                        android:contentDescription="7 Days" />
                    <ImageView
                        android:id="@+id/trophy2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_trophy"
                        android:contentDescription="30 Days" />
                    <ImageView
                        android:id="@+id/trophy3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_trophy"
                        android:contentDescription="90 Days" />
                    <ImageView
                        android:id="@+id/trophy4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_trophy"
                        android:contentDescription="180 Days" />
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
