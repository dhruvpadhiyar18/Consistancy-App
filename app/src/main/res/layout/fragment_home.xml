<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="28dp">

            <!-- Professional Header -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STAY CONSISTENT"
                android:textColor="@color/primary"
                android:textSize="11sp"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif-black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDay"
                style="@style/TextAppearance.Pro.HeadlineLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 1 / 180"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGreeting" />

            <TextView
                android:id="@+id/tvStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_streak_tag"
                android:text="ðŸ”¥ 0 Day Streak"
                android:textColor="@color/primary"
                android:textSize="13sp"
                android:fontFamily="sans-serif-black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDay" />

            <!-- Motivational Quote Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuote"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvStreak">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvQuoteText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="&quot;Consistency is what transforms average into excellence.&quot;"
                        android:textColor="@color/text_title"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:fontStyle="italic"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dashboard Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/progressCard"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/cardQuote">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:padding="28dp">

                    <TextView
                        android:id="@+id/tvProgressLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overall Journey"
                        android:textSize="13sp"
                        android:textColor="@color/text_muted"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.05"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="16dp"
                        android:max="180"
                        android:progress="1"
                        android:progressDrawable="@drawable/custom_progress_bar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvProgressLabel" />

                    <TextView
                        android:id="@+id/tvProgressHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Keep moving forward!"
                        android:textSize="12sp"
                        android:textColor="@color/text_body"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progressBar" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTasksLabel"
                style="@style/TextAppearance.Pro.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:text="Today's Mission"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progressCard" />

            <!-- Task Cards -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTask1"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvTasksLabel">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:gravity="center_vertical"
                    android:padding="26dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbHomeTask1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:buttonTint="@color/primary"
                        android:scaleX="1.4"
                        android:scaleY="1.4" />

                    <TextView
                        android:id="@+id/tvTask1Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="22dp"
                        android:text="Task 1 Title"
                        android:textColor="@color/text_title"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTask2"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/cardTask1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:gravity="center_vertical"
                    android:padding="26dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbHomeTask2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:buttonTint="@color/primary"
                        android:scaleX="1.4"
                        android:scaleY="1.4" />

                    <TextView
                        android:id="@+id/tvTask2Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="22dp"
                        android:text="Task 2 Title"
                        android:textColor="@color/text_title"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Reflection Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReflection"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/cardTask2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Reflection"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-black" />
                    <EditText
                        android:id="@+id/etReflection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="What did you learn today?"
                        android:background="@android:color/transparent"
                        android:textSize="15sp"
                        android:padding="4dp"
                        android:gravity="top"
                        android:minLines="2" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompleteDay"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="32dp"
                android:text="COMPLETE DAY"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:letterSpacing="0.1"
                android:fontFamily="sans-serif-black"
                app:cornerRadius="30dp"
                app:elevation="12dp"
                android:backgroundTint="@color/primary"
                app:layout_constraintTop_toBottomOf="@id/cardReflection"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
