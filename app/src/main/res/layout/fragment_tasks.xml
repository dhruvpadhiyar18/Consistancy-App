<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTasksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Tasks"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Task 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvTaskTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTaskDesc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task description"
                android:layout_marginTop="6dp" />

            <CheckBox
                android:id="@+id/cbTask1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark as completed"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnWhy1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why this matters"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btnResource1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Resource"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Task 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTaskTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTaskDesc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task description"
                android:layout_marginTop="6dp" />

            <CheckBox
                android:id="@+id/cbTask2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark as completed"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnWhy2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why this matters"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btnResource2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Resource"
                android:layout_marginTop="6dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
