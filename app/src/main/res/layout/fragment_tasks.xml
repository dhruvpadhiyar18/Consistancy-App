<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="28dp">

            <TextView
                android:id="@+id/tvTasksTitle"
                style="@style/TextAppearance.Pro.HeadlineLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Mission"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Day Selector Icon Button (Sorting) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDayPicker"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="0dp"
                app:icon="@drawable/ic_settings"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTasksTitle"
                app:layout_constraintBottom_toBottomOf="@id/tvTasksTitle" />

            <TextView
                android:id="@+id/tvTasksSubtitle"
                style="@style/TextAppearance.Pro.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Complete both to grow your streak"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTasksTitle" />

            <!-- Task 1 Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTask1"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@id/tvTasksSubtitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <TextView
                        android:id="@+id/tvTaskTitle1"
                        style="@style/TextAppearance.Pro.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task Title"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/tvTaskDesc1"
                        style="@style/TextAppearance.Pro.BodyLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Detailed description" />

                    <CheckBox
                        android:id="@+id/cbHomeTask1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Mark as completed"
                        android:buttonTint="@color/primary"
                        android:textColor="@color/text_title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWhy1"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Why?"
                            android:textAllCaps="false"
                            app:cornerRadius="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnResource1"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="Resource"
                            android:textAllCaps="false"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_launch" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Task 2 Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTask2"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardTask1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <TextView
                        android:id="@+id/tvTaskTitle2"
                        style="@style/TextAppearance.Pro.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task Title"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/tvTaskDesc2"
                        style="@style/TextAppearance.Pro.BodyLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Detailed description" />

                    <CheckBox
                        android:id="@+id/cbHomeTask2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Mark as completed"
                        android:buttonTint="@color/primary"
                        android:textColor="@color/text_title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWhy2"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Why?"
                            android:textAllCaps="false"
                            app:cornerRadius="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnResource2"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="Resource"
                            android:textAllCaps="false"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_launch" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reflection Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPastReflection"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/cardTask2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:padding="28dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Reflection"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-black" />
                    <TextView
                        android:id="@+id/tvPastReflection"
                        style="@style/TextAppearance.Pro.BodyLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Reflection content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
