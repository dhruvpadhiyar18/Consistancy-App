<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvSettingsTitle"
                style="@style/TextAppearance.Pro.HeadlineLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- PREFERENCES SECTION -->
            <TextView
                android:id="@+id/tvPrefLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="PREFERENCES"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSettingsTitle" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPrefs"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvPrefLabel">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Notifications -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:paddingHorizontal="16dp">
                        <ImageView
                            android:id="@+id/ivNotif"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_settings"
                            app:tint="@color/text_body"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Daily Reminders"
                            android:textColor="@color/text_title"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            app:layout_constraintStart_toEndOf="@id/ivNotif"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SUPPORT & LEGAL SECTION -->
            <TextView
                android:id="@+id/tvLegalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="SUPPORT &amp; LEGAL"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardPrefs" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLegal"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvLegalLabel">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrivacy"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Privacy Policy"
                        android:textColor="@color/text_title"
                        android:gravity="start|center_vertical"
                        android:paddingHorizontal="16dp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_launch"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/text_muted" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider" android:layout_marginHorizontal="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTerms"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Terms &amp; Conditions"
                        android:textColor="@color/text_title"
                        android:gravity="start|center_vertical"
                        android:paddingHorizontal="16dp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_launch"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/text_muted" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider" android:layout_marginHorizontal="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnContact"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Contact Developer"
                        android:textColor="@color/text_title"
                        android:gravity="start|center_vertical"
                        android:paddingHorizontal="16dp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_launch"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/text_muted" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ABOUT SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAbout"
                style="@style/Widget.Consistancy.GlassCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/cardLegal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_card"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consistancy"
                        android:textColor="@color/text_title"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Master your life through the power of daily discipline. This app is meticulously designed to help you build unbreakable habits over a 180-day journey. One day at a time, one task at a time."
                        android:textColor="@color/text_body"
                        android:textSize="14sp"
                        android:lineSpacingExtra="5dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="20dp"
                        android:background="@color/divider" />

                    <TextView
                        android:id="@+id/tvVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version 1.0.0"
                        android:textColor="@color/text_muted"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Built with ❤️ by Dhruv Padhiyar"
                        android:textColor="@color/text_muted"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- RESET SECTION -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:text="Reset Progress"
                android:textColor="@color/error"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardAbout"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
